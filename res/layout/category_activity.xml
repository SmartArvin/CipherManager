	        android:id="@+id/list_rl5_img"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:padding="5dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/icon_classify_bank"
	        />
        <TextView 
            android:id="@+id/list_rl5_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_rl5_img"
            android:padding="10dp"
            android:text="银行账户"
            android:textSize="20sp"
            />
        <TextView 
            android:id="@+id/list_rl5_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="共0个"
            android:textSize="20sp"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/list_rl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_rl5"
        android:padding="10dp"
