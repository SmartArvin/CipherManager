<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#fff"
    >
    <TextView 
        android:id="@+id/content_check_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="账号信息"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@color/anycolor"
        />
    <RelativeLayout 
        android:id="@+id/check_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_check_title"
        android:layout_marginTop="5dp"
        >
        <TextView 
	        android:id="@+id/check_txt1_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:text="账号:"
	        android:textSize="22sp"
	        android:gravity="center"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <TextView 
	        android:id="@+id/content_check_txt1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/check_txt1_title"
	        android:layout_alignTop="@+id/check_txt1_title"
	        android:layout_alignBottom="@+id/check_txt1_title"
	        android:padding="5dp"
	        android:textSize="18sp"
	        android:gravity="left|center_vertical"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <TextView 
	        android:id="@+id/check_txt2_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/check_txt1_title"
	        android:padding="5dp"
	        android:text="密码:"
	        android:textSize="22sp"
	        android:gravity="center"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <TextView 
	        android:id="@+id/content_check_txt2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/check_txt2_title"
	        android:layout_alignTop="@+id/check_txt2_title"
	        android:layout_alignBottom="@+id/check_txt2_title"
	        android:padding="5dp"
	        android:textSize="18sp"
	        android:gravity="left|center_vertical"
	        android:textColor="#000"
	        android:background="#fff"
	        />
          <TextView 
	        android:id="@+id/check_txt3_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/check_txt2_title"
	        android:padding="5dp"
	        android:text="备注:"
	        android:textSize="22sp"
	        android:gravity="center"
	        android:textColor="#000"
	        android:background="#fff"
	        />
          <TextView 
	        android:id="@+id/content_check_txt3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/check_txt3_title"
	        android:layout_alignTop="@+id/check_txt3_title"
	        android:layout_alignBottom="@+id/check_txt3_title"
	        android:padding="5dp"
	        android:textSize="18sp"
	        android:gravity="left|center_vertical"
	        android:textColor="#000"
	        android:background="#fff"
	        />
    </RelativeLayout>
   
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_rl"
        android:padding="10dp"
        >
	     <Button 
	        android:id="@+id/content_check_ok"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:text="确定"
	        android:textSize="22sp"
	        android:textColor="#fff"
	        android:background="@drawable/button_selector"
	        />
    </RelativeLayout>
    
</RelativeLayout>