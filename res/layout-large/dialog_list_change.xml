<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#fff"
    >
    <TextView 
        android:id="@+id/list_change_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="修改账号信息"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@color/anycolor"
        />
    <RelativeLayout 
        android:id="@+id/change_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_change_title"
        android:layout_marginTop="5dp"
        >
         <TextView 
	        android:id="@+id/list_change_txt1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:text="账号"
	        android:textSize="22sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <EditText 
            android:id="@+id/list_change_et1"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/list_change_txt1"
	        android:padding="15dp"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="@drawable/et_bg"
             />
         <TextView 
	        android:id="@+id/list_change_txt2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/list_change_et1"
	        android:padding="5dp"
	        android:text="密码"
	        android:textSize="22sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <EditText 
            android:id="@+id/list_change_et2"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/list_change_txt2"
	        android:padding="15dp"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="@drawable/et_bg"
             />
          <TextView 
	        android:id="@+id/list_change_txt3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/list_change_et2"
	        android:padding="5dp"
	        android:text="确认密码"
	        android:textSize="22sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <EditText 
            android:id="@+id/list_change_et3"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/list_change_txt3"
	        android:padding="15dp"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="@drawable/et_bg"
             />
         <TextView 
	        android:id="@+id/list_change_txt4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/list_change_et3"
	        android:padding="5dp"
	        android:text="备注"
	        android:textSize="22sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <EditText 
            android:id="@+id/list_change_et4"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/list_change_txt4"
	        android:padding="15dp"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="@drawable/et_bg"
             />
    </RelativeLayout>
   
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_rl"
        android:padding="10dp"
        >
	      <Button 
	        android:id="@+id/list_change_cancle"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:padding="5dp"
	        android:text="取消"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:background="#dbe6e2"
	        />
	     <Button 
	        android:id="@+id/list_change_ok"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/list_change_cancle"
	        android:layout_alignBottom="@+id/list_change_cancle"
	        android:padding="5dp"
	        android:text="确定"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:background="@drawable/button_selector"
	        />
    </RelativeLayout>
    
</RelativeLayout>