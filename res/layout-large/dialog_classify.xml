<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/anycolor"
    >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="选择分类"
            android:textColor="#fff"
            android:textSize="25sp" />

    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button 
            android:id="@+id/k1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网站论坛"
            android:drawableLeft="@drawable/icon_classify_web"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textSize="22sp"
            android:gravity="left|center_vertical"
            android:background="#ffffff"
            android:clickable="true"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5edf0"
            />
        <Button 
            android:id="@+id/k2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="聊天社区"
            android:drawableLeft="@drawable/icon_classify_chat"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textSize="22sp"
            android:gravity="left|center_vertical"
            android:background="#ffffff"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5edf0"
            />
        <Button 
            android:id="@+id/k3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏账户"
            android:drawableLeft="@drawable/icon_classify_game"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textSize="22sp"
            android:gravity="left|center_vertical"
            android:background="#ffffff"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5edf0"
            />
        <Button 
            android:id="@+id/k4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="银行账户"
            android:drawableLeft="@drawable/icon_classify_bank"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textSize="22sp"
            android:gravity="left|center_vertical"
            android:background="#ffffff"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5edf0"
            />
        <Button 
            android:id="@+id/k5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邮箱账户"
            android:drawableLeft="@drawable/icon_classify_email"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textSize="22sp"
            android:gravity="left|center_vertical"
            android:background="#ffffff"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5edf0"
            />
        <Button 
            android:id="@+id/k6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他"
            android:drawableLeft="@drawable/icon_classify_others"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textSize="22sp"
            android:gravity="left|center_vertical"
            android:background="#ffffff"
            />
    </LinearLayout>
</LinearLayout>