<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" 
    >

    <RelativeLayout 
        android:id="@+id/create_rl1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/anycolor"
        >
        <Button 
        	android:id="@+id/create_back"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:padding="10dp"
        	android:text="返回"
        	android:textSize="25sp"
	        android:textColor="#ffffff"
	        android:gravity="center"
	        android:background="@drawable/button_selector"
        />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/create_back"
            android:layout_centerVertical="true"
            android:background="#d2dbda"
            />
	    <TextView 
	        android:id="@+id/create_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="10dp"
	        android:text="新建账户"
	        android:textSize="35sp"
	        android:textColor="#ffffff"
	        android:layout_centerInParent="true"
	        android:gravity="center"
	        />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/create_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_rl1"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/create_bg"
        >
        <RelativeLayout 
            android:id="@+id/create_rl3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_selector"
            >
            <TextView 
                android:id="@+id/create_txt1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="--请选择分类--"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:gravity="center"
                />
           <View 
                android:id="@+id/create_line"
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:layout_toRightOf="@+id/create_txt1"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="55dp"
	            android:background="#ffffff"
	            />
           <ImageView 
               android:id="@+id/create_img"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_toRightOf="@+id/create_line"
               android:background="#b1c4c4"
               android:src="@drawable/create_spinner"
               />
        </RelativeLayout>
        <EditText 
            android:id="@+id/create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_rl3"
            android:padding="15dp"
            android:textSize="22sp"
            android:hint="请输入账号"
            android:background="@drawable/et_bg"
            />
        <EditText 
            android:id="@+id/create_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_name"
            android:padding="15dp"
            android:textSize="22sp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:background="@drawable/et_bg"
            />
        <EditText 
            android:id="@+id/create_password_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_password"
            android:padding="15dp"
            android:textSize="22sp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:background="@drawable/et_bg"
            />
        <EditText 
            android:id="@+id/create_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_password_enter"
           android:padding="15dp"
            android:textSize="22sp"
            android:hint="备注"
            android:background="@drawable/et_bg"
            />
    </RelativeLayout>
    <TextView 
        android:id="@+id/create_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_rl2"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="提示：\n亲，记得选择分类管理哦！"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    <Button 
        android:id="@+id/create_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_txt2"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="保存"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_selector"
        />
    
</RelativeLayout>    