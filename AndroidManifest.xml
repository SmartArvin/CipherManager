<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miyang.ciphermanager"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="密码管家"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.miyang.ciphermanager.WelcomePage"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="密码管家" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.miyang.ciphermanager.RegisterActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.LoginActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.HomeActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.CreateActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.SearchActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.CategoryActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.LikeActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.SafeActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.AboutActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        <activity 
            android:name="com.miyang.ciphermanager.CategoryContent"
            android:theme="@android:style/Theme.NoTitleBar"
            ></activity>
        
    </application>
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" >
    </supports-screens>
    <!--往sdcard中写入数据的权限 -->
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
 <!--在sdcard中创建/删除文件的权限 -->
<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>
</manifest>
